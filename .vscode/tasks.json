{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-I",
                "${workspaceFolder}\\lib",
                "-g",
                "${workspaceFolder}\\${fileBasenameNoExtension}.cpp",
                "${workspaceFolder}\\lib\\memory\\memory.cpp",
                "-o",
                "${workspaceFolder}\\release\\x64\\Windows\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}